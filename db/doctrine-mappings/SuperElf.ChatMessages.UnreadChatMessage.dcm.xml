<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SuperElf\ChatMessages\UnreadChatMessage" table="chatMessagesUnread"
            repository-class="SuperElf\Repositories\ChatMessageUnreadRepository">
        <many-to-one field="chatMessage" target-entity="SuperElf\ChatMessages\ChatMessage">
            <join-columns>
                <join-column name="chatMessageId" referenced-column-name="id" nullable="false"
                             on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="poolUser" target-entity="SuperElf\Pool\User" inversed-by="unreadChatMessages">
            <join-columns>
                <join-column name="poolUserId" referenced-column-name="id" nullable="false"
                             on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <unique-constraints>
            <unique-constraint columns="chatMessageId,poolUserId" name="main_u_idx"/>
        </unique-constraints>
    </entity>

</doctrine-mapping>
