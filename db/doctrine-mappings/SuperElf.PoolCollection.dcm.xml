<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SuperElf\PoolCollection" table="poolCollections" repository-class="SuperElf\Repositories\PoolCollectionRepository">
    <one-to-one field="association" target-entity="Sports\Association" >
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="associationId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </one-to-one>
    <one-to-many field="pools" target-entity="SuperElf\Pool" mapped-by="collection">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <unique-constraints>
      <unique-constraint columns="associationId" name="association_u_idx"/>
    </unique-constraints>
  </entity>

</doctrine-mapping>