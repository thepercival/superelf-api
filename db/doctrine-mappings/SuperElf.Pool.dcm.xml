<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SuperElf\Pool" table="pools" repository-class="SuperElf\Pool\Repository">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <many-to-one field="season" target-entity="Sports\Season">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="seasonId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="sourceCompetition" target-entity="Sports\Competition">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="sourceCompetitionId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="collection" target-entity="SuperElf\PoolCollection" inversed-by="pools">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="collectionId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <one-to-many field="users" target-entity="SuperElf\Pool\User" mapped-by="pool">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <one-to-many field="periods" target-entity="SuperElf\Pool\Period" mapped-by="pool">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <one-to-many field="scoreUnits" target-entity="SuperElf\Pool\ScoreUnit" mapped-by="pool">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>

</doctrine-mapping>