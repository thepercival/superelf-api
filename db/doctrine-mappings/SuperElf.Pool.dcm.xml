<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SuperElf\Pool" table="pools" repository-class="SuperElf\Pool\Repository">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <one-to-many field="competitors" target-entity="SuperElf\Competitor" mapped-by="pool">
      <cascade>
        <cascade-persist/>
        <cascade-remove/>
      </cascade>
    </one-to-many>
    <many-to-one field="season" target-entity="Sports\Season">
      <join-columns>
        <join-column name="seasonId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="collection" target-entity="SuperElf\PoolCollection" inversed-by="pools">
      <join-columns>
        <join-column name="collectionId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="competitions" target-entity="Sports\Competition">
      <join-table name="pools_competition">
        <join-columns>
          <join-column name="pool_id" referenced-column-name="id" on-delete="CASCADE"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="competition_id" referenced-column-name="id" on-delete="CASCADE"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>

</doctrine-mapping>