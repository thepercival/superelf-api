<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SuperElf\Competitor" table="competitors" repository-class="SuperElf\Competitor\Repository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="placeNr" column="placeNr" type="smallint" nullable="false" unique="false"/>
        <field name="pouleNr" column="pouleNr" type="smallint" nullable="false" unique="false"/>
        <field name="registered" column="registered" type="boolean" nullable="true" unique="false"/>
        <field name="info" column="info" type="string" length="200" nullable="true" unique="false"/>
        <field name="admin" column="admin" type="boolean" nullable="false" unique="false"/>
        <many-to-one field="pool" target-entity="SuperElf\Pool" inversed-by="competitors">
            <join-columns>
                <join-column name="poolId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="competition" target-entity="Sports\Competition">
            <join-columns>
                <join-column name="competitionId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="user" target-entity="SuperElf\User" inversed-by="competitors">
            <join-columns>
                <join-column name="userId" referenced-column-name="id" nullable="false" on-delete="RESTRICT"/>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>