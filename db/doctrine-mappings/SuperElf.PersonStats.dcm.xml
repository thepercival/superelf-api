<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SuperElf\PersonStats" table="personStats" repository-class="SuperElf\PersonStats\Repository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="gameRound" column="gameRound" type="smallint" nullable="false" unique="false"/>
        <field name="stats" column="stats" type="json" nullable="false" unique="false"/>
        <many-to-one field="person" target-entity="Sports\Person">
            <join-columns>
                <join-column name="personId" referenced-column-name="id" nullable="false" on-delete="RESTRICT"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="viewPeriod" target-entity="SuperElf\Period\View">
            <join-columns>
                <join-column name="viewPeriodId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <unique-constraints>
            <unique-constraint columns="personId,viewPeriodId,gameRound" name="main_u_idx"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>