<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="SuperElf\Achievement">
        <field name="createDateTime" column="createDateTime" type="datetime_immutable" nullable="false"/>
        <field name="rank" column="rank" type="smallint" nullable="false" unique="false"/>
        <many-to-one field="competition" target-entity="Sports\Competition">
            <join-columns>
                <join-column name="competitionId" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
        <many-to-one field="poolUser" target-entity="SuperElf\Pool\User" inversed-by="competitors">
            <join-columns>
                <join-column name="poolUserId" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
            </join-columns>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>